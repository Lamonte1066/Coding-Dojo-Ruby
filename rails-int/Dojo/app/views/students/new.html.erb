<h1>New Student</h1>
<% if flash[:errors] %>
    <%= flash[:errors].each do |error| %>
        <p><%= error %></p>
    <% end %>
<% end %>
<form action="<%= '/camps/<%= @camp.id %>/students' method="POST">
    <input type="hidden" name="authenticity_token" value ="<%= form_authenticity_token %>">
    <p><label for="first_name">First Name: </label></p>
    <input type="text" name="form[first_name]" value="<%= @student.first_name %>">
    <p><label for="last_name">Last Name: </label></p>
    <input type="text" name="form[last_name]" value="<%= @student.last_name %>">
    <p><label for="email">Email: </label></p>
    <input type="text" name="form[email]" value="<%= @student.email %>">
    <p><input type="submit" name="submit" value="Create"></p>
    <p><a href="<%= '/' %>>Home</a></p>
</form>

