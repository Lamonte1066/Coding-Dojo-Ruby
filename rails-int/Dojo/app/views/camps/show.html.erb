<h1><%= @camp.branch %></h1>

<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>


<p>Address: <%= @camp.street %></p>
<p>City: <%= @camp.city %> State: <%= @camp.state %></p>

<h2>Student Roster</h2>

<table>
	<thead>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email</th>
		<th>Actions</th>
	</thead>
	<tbody>
	<% @students.each do |student| %>
		<tr>
			<td><%= student.first_name %></td>
			<td><%= student.last_name %></td>
			<td><%= student.email %></td>
			<td>
				<%= link_to "Show", camp_student_path(@camp, student) %> |
				<%= link_to "Edit", edit_camp_student_path(@camp, student) %> | 
				<%= link_to "Delete", camp_student_path(@camp, student), data: { method: :delete, confirm: "Are you sure?" } %>
			</td>
		</tr>
	<% end %>		
	</tbody>
</table>

<%= link_to "Home", root_path %> | <%= link_to "Edit", edit_camp_path(@camp) %> | <%= link_to "Add Student", new_camp_student_path(@camp) %>